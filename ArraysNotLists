// Various ways of creating arrays

// To initialize an empty array

let students = [];

// An array of strings

let colorList = ['red', 'orange', 'yellow'];

// An array of numbers

let lottoNums = [19,22,56,12,51];

// An array with boolean, number, string, and null data types

let mixedArray = [true, 68, 'cat', null];

// Accessing Indexes in Arrays

let colors = ['red', 'orange', 'yellow', 'green'];

console.log(colors.length); //4

colors[0] // red
colors[1] // orange
colors[2] // yellow
colors[3] // green
colors[4] // undefined

// You can also access the index of an element within an array

colors[1][3] // n (the third index of the element in the 1st index of the array, orange)

// Array Methods

// Push - Add to the end of the array
// Pop - Remove from the end of the array
// Shift - Remove from the start of the array
// Unshift - Add to the start of the array

colors.push('purple'); // Adds Purple to the end of the array

colors.unshift('blue'); // Adds Blue to the start of the array

colors.pop(); // Removes Purple from the end of the array

colors.shift(); // Removes Blue from the start of the array
